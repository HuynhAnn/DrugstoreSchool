@model IEnumerable<DrugstoreSchool.Models.Thuoc>

@{
    ViewBag.Title = "ListThuocModel";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ListThuocModel</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table cellpadding="10" border="1">
    <thead>
        <tr>
            <th>
                Thành Phần
            </th>
            <th>
                Nhóm Thuốc
            </th>
            <th>
                Dạng Thuốc
            </th>
            <th>
                Sản Xuất
            </th>
            <th>
                Đăng Ký
            </th>
            <th>
                Hình Ảnh
            </th>
            <th>Chỉnh Sửa</th>
        </tr>
    </thead>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ThanhPhan1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NhomThuoc1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DangThuoc1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SanXuat1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DangKy1)
        </td>
        <td>
            <img src="@item.Image_cover1" width="95" title="Hình Ảnh"/>
        </td>
        <td>
            <a href="/Thuoc/EditThuoc/@item.Id" title="Edit Thuoc">Edit</a>
            
            <a href="/Thuoc/DeleteThuoc/@item.Id" title="Delete Thuoc">Delete</a>
        </td>
    </tr>
}

</table>
